#include <stdio.h>

int main()
{
    int a[5]={1,2,3,4,5},b[6]={2,3,4,5,6,7},sum=0,i;
    
    for(i=0;i<5;i++)
    {
       if(i%2==0)
       sum=sum+a[i];
    }   
    printf("sum of alternate elements in array a is %d\n",sum);
    
    sum=0;
    
    for(i=0;i<6;i++)
    {
       if(i%2==0)
       sum=sum+b[i];
    }   
    printf("sum of alternate elements in array b is %d",sum);


    return 0;
}
